
@{
    ViewBag.Title = "GetAllUsers"; 
}

@section scripts{
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <script>

        $(document).ready(function () {            

            var page = 1;

            $.ajax({

                url: "/Admin/GetUsersByRole",
                contentType: 'application/html; charset=utf-8',
                type: "GET",
                dataType: 'html'

            }).success(function (data) {
                //console.log(data);
                $("#users").html(data); 

            });

            //role filtering
            $("#role").change(function () {
                console.log($(this).val());
                console.log($("#status").val());

                $.ajax({

                    url: "/Admin/GetUsersByRole",
                    contentType: 'application/html; charset=utf-8',
                    type: "GET",
                    dataType: 'html',
                    data: {
                        "role": $(this).val(),
                        "pageSize": $("#perPage").val(),
                        "status": $("#status").val()
                    }

                }).success(function (data) {

                    page = 1;
                    $("#pageNumber").html("Page: <b>1</b>");
                    $("#users").html(data);  

                });

            });


            //paging
            function changePage(p) {
                $.ajax({

                    url: "/Admin/GetUsersByRole",
                    contentType: 'application/html; charset=utf-8',
                    type: "GET",
                    dataType: 'html',
                    data: {
                        "role": $("#role").val(),
                        "pageNumber": p,
                        "pageSize": $("#perPage").val(),
                        "status": $("#status").val()
                    }

                }).success(function (data) {
                    
                    if (data.indexOf("<tr>") > -1) {
                        $("#users").html(data);

                    } else {
                        page--;
                    }

                    $("#pageNumber").html("Page: <b>" + page + "</b>");

                });
            }


            $("#next").click(function () {
                page++;
                console.log(page);
                changePage(page);
            });

            $("#prev").click(function () {
                if (page > 1) {
                    page--;
                    console.log(page);
                    changePage(page);
                }                
            });

            //count per page 
            $("#perPage").change(function () {
                console.log($(this).val());

                $.ajax({

                    url: "/Admin/GetUsersByRole",
                    contentType: 'application/html; charset=utf-8',
                    type: "GET",
                    dataType: 'html',
                    data: {
                        "role": $("#role").val(),
                        "pageSize": $(this).val(),
                        "status": $("#status").val()
                    }

                }).success(function (data) {

                    page = 1;
                    $("#users").html(data);
                    $("#pageNumber").html("Page: <b>1</b>");
                });

            });

            // status filtering
            $("#status").change(function () {
                console.log($(this).val());

                $.ajax({

                    url: "/Admin/GetUsersByRole",
                    contentType: 'application/html; charset=utf-8',
                    type: "GET",
                    dataType: 'html',
                    data: {
                        "role": $("#role").val(),
                        "pageSize": $("#perPage").val(),
                        "status": $(this).val()
                    }

                }).success(function (data) {

                    page = 1;
                    $("#users").html(data);
                    $("#pageNumber").html("Page: <b>1</b>");
                });

            });
            


        });

    </script>
}

<div class="row">
    
    <div class="col-sm-8 col-sm-offset-2">
        <h3>Users:</h3>
        <div>
            <div class="pull-left">
                <h4>Role:</h4>
                <select name="filter" id="role" class="form-control ">
                    <option>All</option>
                    <option>Teacher</option>
                    <option>Student</option>
                </select>
            </div>
            <div class="pull-left">    
                <h4>Status:</h4>            
                <select id="status" class="form-control ">
                    <option>All</option>
                    <option>Active</option>
                    <option>Inactive</option> 
                </select>
            </div>
            <div class="pull-right">
                <h4>Per page:</h4>
                <select id="perPage" class= "form-control ">
                    <option>10</option>
                    <option>15</option>
                    <option>20</option>
                </select>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <td>
                            <strong>Status</strong>
                        </td>
                        <td>
                            <strong>Photo</strong>
                        </td>
                        <td>
                            <strong>Last Name</strong>
                        </td>
                        <td>
                            <strong>First Name</strong>
                        </td>
                        <td>
                            <strong>Email</strong>
                        </td>
                       
                        <td>
                            <strong>Role</strong>
                        </td>
                    </tr>
                </thead>
                <tbody id="users">        
                                               
                </tbody>
            </table>    
            
            <nav>
                <ul class="pager">
                    <li class="previous">
                        <a href="" id="prev" style="width:110px;">
                            <span aria-hidden="true">&larr;</span>
                            Previous
                        </a>
                    </li>
                    <li class="control-label" id="pageNumber">
                        Page: <b>1</b>
                    </li>
                    <li class="next">
                        <a href="" id="next" style="width:110px;">
                            Next
                            <span aria-hidden="true">&rarr;</span>
                        </a>
                    </li>
                </ul>
            </nav>   

        </div>        
    </div>
</div>

